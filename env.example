# BuffetBot Environment Variables
# Copy this file to .env and update with your values

# API Keys (if needed for data fetching)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here

# Database Configuration (if using a database)
DATABASE_URL=sqlite:///buffetbot.db
# DATABASE_URL=postgresql://user:password@localhost:5432/buffetbot

# Cache Configuration
CACHE_DIR=./cache
CACHE_TTL=3600  # Cache time-to-live in seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/buffetbot.log

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Analysis Configuration
DEFAULT_ANALYSIS_PERIOD=5  # Years of historical data to analyze
DEFAULT_DISCOUNT_RATE=0.10  # Default discount rate for DCF calculations
DEFAULT_GROWTH_RATE=0.03  # Default terminal growth rate

# Feature Flags
ENABLE_CACHE=true
ENABLE_DEBUG_MODE=false
ENABLE_EXPERIMENTAL_FEATURES=false
